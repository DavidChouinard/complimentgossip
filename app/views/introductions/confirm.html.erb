<form>

  <div class="form-container" style="margin-top: 120px;">
    <label>Your email</label>
    <input type="text" placeholder="david@example.com" />
  </div>

  <div class="form-inset">
    <div class="form-inset-block">
      <h3>Find address by name</h3>

      <label>Name</label>
      <input type="text" />

      <label>Location</label>
      <input type="text" id="address-state" placeholder="city, state, etc. (optional)" />
    </div>

    <div class="form-inset-block">
      <h3>Find workplace address</h3>

      <label style="margin-top: 46px;">Business name</label>
      <input type="text" placeholder="" id="google-autocomplete" autocomplete="off"/>
    </div>
  </div>

  <div class="form-container">
    <label>Recipient full name</label>
    <input type="text" id="address-name" value="David â€¦"/>

    <label>Address</label>
    <input type="text" id="address-line1"/>
    <input type="text" id="address-line2"/>

    <div class="form-group">
      <div style="width:55%;">
        <label>City</label>
        <input type="text" id="address-city"/>
      </div>

      <div style="width:20%;">
        <label>State</label>
        <input type="text" id="address-state"/>
      </div>

      <div style="width:25%;">
        <label>Zip code</label>
        <input type="text" id="address-postalcode"/>
      </div>
    </div>

    <label>Country</label>
    <input type="text" id="address-country"/>
  </div>


</form>
